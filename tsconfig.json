{
  "compilerOptions": {
    "module": "esnext",
    "target": "esnext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "noUnusedLocals": true,
    "resolveJsonModule": true,
    "verbatimModuleSyntax": true,
    "jsx": "preserve",
    "lib": ["esnext", "dom", "dom.iterable"],
    "types": ["vite/client"],
    "typeRoots": ["types", "node_modules/"],
    "baseUrl": "./",
    "paths": {
      "@/*": ["./.vitepress/*"],
      "@client/*": ["./.vitepress/client/*"]
    }
  },
  "include": [
    "docs/**/*.ts",
    "docs/**/*.vue",
    ".vitepress/**/*.ts",
    "./*.ts",
    "vite.config.mts"
  ],
  "exclude": [
    "**/dist/**",
    "template",
    "bin",
    "docs/snippets",
    "scripts",
    "node_modules"
  ]
}
